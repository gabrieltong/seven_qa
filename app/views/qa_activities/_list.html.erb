<%- model_class = QaActivity -%>
<h1><%= t :activity_list%></h1>

<table>
  <tr>
    <th><%=t(:activity_title  )	 %> </th>	
    <th><%=t(:activity_hold_at)%>	</th>
    <th><%=t(:activity_area   )	 %> </th>
    <th><%=t(:activity_works  )	 %> </th>
    <th><%=t(:activity_deal   )	 %> </th>
    <th><%=t(:activity_speaker)%>	</th>
    <th><%=t(:activity_partner)%>	</th>
    <th><%=t(:activity_contact)%>	</th>
    <th><%=t(:activity_sponsor)%>	</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @qa_activities.each do |qa_activity| %>
  <tr>
    <td><%= qa_activity.title %></td>	
    <td><%= qa_activity.hold_at %></td>
    <td><%= qa_activity.area %></td>
    <td><%= qa_activity.works %></td>
    <td><%= qa_activity.deal %></td>
    <td><%= qa_activity.speaker %></td>
    <td><%= qa_activity.partner %></td>
    <td><%= qa_activity.contact %></td>
    <td><%= qa_activity.sponsor %></td>
    <td><%= link_to t(:activity_show), qa_activity %></td>
    <td><%= link_to t(:activity_edit), edit_qa_activity_path(qa_activity) %></td>
    <td><%= link_to t(:activity_destroy), qa_activity, method: :delete, data: { confirm: t(:text_are_you_sure) } %></td>
  </tr>
<% end %>
</table>

<br />

